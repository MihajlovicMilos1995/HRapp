@model IEnumerable<HRApi.Models.RegUser>

@{
    ViewData["Title"] = "Users";
    Layout = "~/VIews/Shared/_Layout.cshtml";
}

<h2>Users</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RegUserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RegUserLastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RegUserCity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WorkXp)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RegUserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RegUserLastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RegUserCity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.WorkXp)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
